<?xml version="1.0" encoding="UTF-8"?>
<configuration>
<!--    콘솔 로그 설정-->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
<!--            <pattern>%d{yyyy-MM-dd HH:mm} %logger{36}-%msg%n</pattern>-->
            <!-- %logger{36} : 로거의 이름(클래스 명)을 최대 36자까지만 출력 -->
            <!-- %msg%n: 로그메시지를 출력하고 마지막에 끝에서 줄바꿈 -->
            <pattern>%d{HH:mm} %logger{36}-%msg%n</pattern> <!-- 시간만 나오도록 하기 -->
        </encoder>

    </appender>

<!--    일반 로그 파일 설정 - info부터 모든 로그 담는 파일 -->
<!--    로그 설정에서 **롤링**이라는 것은 날짜가 변함에 따라 별도의 파일을 생성하는 것이다.-->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm} %logger{36}-%msg%n</pattern>
        </encoder>
        <file>logs/app.log</file> <!--파일은 어디에 저장할건지 설정!-->
        <!--        롤링 policy를 적기. 하루가 지날때마다 롤링-->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>log/app.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>10</maxHistory> <!-- 언제까지 저장해줄지를 명시. 10일치만 저장 -->
        </rollingPolicy>
    </appender>

<!--    에러 로그 파일 설정-->
    <appender name="ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm} %logger{36}-%msg%n</pattern>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.LevelFilter"> <!--  -->
            <level>error</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>

        <file>logs/app-error.log</file> <!--파일은 어디에 저장할건지 설정!-->
<!--        롤링 policy를 적기. 하루가 지날때마다 롤링-->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>log/app-error.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>10</maxHistory> <!-- 언제까지 저장해줄지를 명시. 10일치만 저장 -->
        </rollingPolicy>
    </appender>

<!--    로그레벨 관련 설정-->
    <root level="info"> <!-- 담는거는 info까지 다 담아버리고, 위에서 에러 로그만 걸러보자 -->
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
        <appender-ref ref="ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender"/>
    </root>

</configuration>